{
  "version": 2,
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "**/*.html,**/*.css,**/*.js,image/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*\\.(css|js))",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      },
      "continue": true
    },
    {
      "src": "/(.*\\.(html|htm))",
      "headers": {
        "Cache-Control": "public, max-age=300"
      },
      "continue": true
    },
    {
      "src": "/image/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      },
      "continue": true
    },
    {
      "src": "/favicon\\.ico",
      "dest": "/image/my-small1.jpg",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "outputDirectory": ".",
  "regions": ["hkg1"]
}
